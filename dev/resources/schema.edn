 ^{:translate/chinese "員工基本資料表"
   :postgres/table-order 200}
 employee
 [^{:type Integer
    :postgres/auto-increment :always
    :postgres/primary-key true
    :spec/override clojure.core/pos-int?
    :translate/chinese "員工基本資料表id"} id
  ^{:type String
    :postgres/index true
    :postgres/unique true
    :translate/chinese "身分證號"} taiwan-id
  ^{:type String
    :postgres/index true
    :postgres/unique true
    :translate/chinese "員工編號"} company-id
  ^{:type String
    :postgres/index true
    :translate/chinese "姓名"} name
  ^{:type Date
    :translate/chinese "生日"} birthday
  ^{:type gender-type
    :spec/override clojure.core/string?
    :translate/chinese "性別"} gender
  ^{:type direct-type
    :spec/override clojure.core/string?
    :translate/chinese "間直接"} direct-kind
  ^{:type salary-type
    :spec/override clojure.core/string?
    :translate/chinese "薪資類別"} salary-kind
  ^{:type employee-type
    :spec/override clojure.core/string?
    :translate/chinese "員工類別"} employee-kind
  ^{:type price-type
    :spec/override clojure.core/string?
    :translate/chinese "費用類別"} price-kind
  ^{:type String
    :translate/chinese "戶籍地址"} reg-addr
  ^{:type String
    :optional true
    :translate/chinese "通訊地址"} mail-addr
  ^{:type String
    :translate/chinese "單位代號"} unit-id
  ^{:type bank
    :spec/override clojure.core/string?
    :postgres/ref-update :cascade
    :postgres/ref-delete :cascade
    :optional true
    :translate/chinese "銀行代號"} bank-id
  ^{:type String
    :optional true
    :translate/chinese "銀行帳號"} account
  ^{:type String
    :translate/chinese "工作地"} work-place
  ^{:type String
    :translate/chinese "廠區"} factory
  ^{:type String
    :translate/chinese "職稱"} job-title
  ^{:type String
    :optional true
    :translate/chinese "職稱2"} job-title2
  ^{:type String
    :optional true
    :translate/chinese "住家電話"} phone
  ^{:type String
    :optional true
    :translate/chinese "行動電話"} mobile
  ^{:type String
    :optional true
    :translate/chinese "學歷"} education
  ^{:type String
    :optional true
    :translate/chinese "修業期間"} education-period
  ^{:type String
    :optional true
    :translate/chinese "特殊例外處理"} exception
  ^{:type Date
    :translate/chinese "異動日期"} change-date
  ^{:type String
    :optional true
    :translate/chinese "備註"} memo]

 ^{:translate/chinese "員工異動檔"
   :postgres/table-order 300}
 employee-change
 [^{:type Integer
    :postgres/auto-increment :always
    :postgres/primary-key true
    :spec/override clojure.core/pos-int?
    :translate/chinese "員工異動檔id"} id
  ^{:type employee-change-type
    :translate/chinese "異動類別"} change-kind
  ^{:type Date
    :translate/chinese "到職日期"} change-day
  ^{:type DateTime
    :default "CURRENT_TIMESTAMP"
    :translate/chinese "輸入異動時間"} change-at
  ^{:type String
    :optional true
    :translate/chinese "備註"} memo]

 ^{:translate/chinese "銀行一覽表"
